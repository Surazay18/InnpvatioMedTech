<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InnpvatioMedTech.Views.PatientsView"
             BackgroundColor="#878787">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Patient Management" 
               FontSize="24"
               HorizontalOptions="Center"/>

        <CollectionView>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>John Smith</x:String>
                    <x:String>Sarah Johnson</x:String>
                    <x:String>Michael Brown</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="5">
                        <Label Text="{Binding .}" FontSize="16"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>